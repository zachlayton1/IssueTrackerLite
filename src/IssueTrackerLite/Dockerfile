FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["src/IssueTrackerLite/IssueTrackerLite.csproj", "src/IssueTrackerLite/"]
RUN dotnet restore "src/IssueTrackerLite/IssueTrackerLite.csproj"
COPY . .
WORKDIR "/src/src/IssueTrackerLite"
RUN dotnet publish "IssueTrackerLite.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
RUN mkdir -p /app/data
ENV ConnectionStrings__DefaultConnection="Data Source=/app/data/app.db"
ENTRYPOINT ["dotnet", "IssueTrackerLite.dll"]
